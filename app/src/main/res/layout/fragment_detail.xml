<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_12"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btnBack" />
        <ImageView
            android:id="@+id/pin"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/pin"/>
        <ImageView
            android:id="@+id/addCoin"
            android:layout_toStartOf="@id/pin"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:background="@drawable/add_coin"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block_name"
        android:layout_below="@id/top_layout"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_coin"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"/>
        <RelativeLayout
            android:id="@+id/block_name_coin"
            android:layout_toEndOf="@id/icon_coin"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/symbol"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_Color"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/name_coin"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_Color"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/block_changer"
                app:cardCornerRadius="@dimen/dp_6"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/dp_5"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_23">
                <RelativeLayout
                    android:id="@+id/block_change"
                    android:paddingStart="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/icon_change"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_10"/>
                    <RelativeLayout
                        android:layout_toEndOf="@id/icon_change"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/value_changer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/price_coin"
                android:layout_toStartOf="@id/block_changer"
                android:layout_marginEnd="@dimen/dp_10"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_Color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/block_menu_above"
        android:layout_below="@id/block_name"
        android:paddingStart="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/btn_notification"
            android:background="@drawable/custom_menu_not_selected"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_27"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/notification" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/price"
            android:layout_toEndOf="@id/btn_notification"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_158"
            android:layout_height="@dimen/dp_27"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/priceText"
                android:text="@string/price"
                android:textSize="@dimen/sp_14"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/market_cap"
            android:layout_toEndOf="@id/price"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_width="@dimen/dp_158"
            android:layout_height="@dimen/dp_27"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:id="@+id/marketCapText"
                android:text="@string/market_cap"
                android:textSize="@dimen/sp_14"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/button_text_Color"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/block_menu_above"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/block_time"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/menu_5y"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu5yText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_5y"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_3y"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_5y"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu3yText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_3y"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_1y"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_3y"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu1yText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_1y"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_3m"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_1y"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu3mText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_3m"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_1m"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_3m"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu1mText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_1m"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_7d"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_1m"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu7dText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_7d"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/menu_24h"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:background="@drawable/custom_menu_selected"
                    android:layout_toEndOf="@id/menu_7d"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu24hText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/_24h"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/menu_1h"
                    android:background="@drawable/custom_time_not_selected"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_9"
                    android:paddingEnd="@dimen/dp_9"
                    android:layout_toEndOf="@id/menu_24h"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/menu1hText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/button_text_Color"
                        android:text="@string/_1h"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_graph"
                android:layout_below="@id/block_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_230" />
                <ProgressBar
                    android:id="@+id/loadingBar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/infoBox"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="@dimen/dp_8">
                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10" />
                        <TextView
                            android:id="@+id/priceTextView"
                            android:layout_below="@id/dateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_10" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block_coin_detail"
                android:layout_below="@id/block_graph"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_overview"
                    android:text="@string/overview"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/sp_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:id="@+id/block_vol24h"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_below="@id/title_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_vol24h"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/vol_24h"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_vol24h"
                        android:textColor="@color/light_black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/block_market_cap"
                    android:layout_below="@id/block_vol24h"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_market_cap"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/market_cap"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_market_cap"
                        android:textColor="@color/light_black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/block_circulating_supply"
                    android:layout_below="@id/block_market_cap"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_circulating"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/circulating_supply"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_circulating"
                        android:textColor="@color/light_black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/block_total_supply"
                    android:layout_below="@id/block_circulating_supply"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_total_supply"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/total_supply"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_total_supply"
                        android:textColor="@color/light_black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/block_max_supply"
                    android:layout_below="@id/block_total_supply"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/label_max_supply"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/max_supply"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_max_supply"
                        android:textColor="@color/light_black"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/block_rank"
                    android:layout_below="@id/block_max_supply"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/rank"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_Color"
                        android:layout_alignParentStart="true"
                        android:text="@string/rank"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/value_rank"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block_about_coin"
                android:layout_below="@id/block_coin_detail"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:text="@string/about_bitcoin"
                    android:textColor="@color/text_Color"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_below="@id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:maxLines="7"
                    android:lineSpacingExtra="@dimen/dp_10"
                    android:textColor="@color/light_black" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
